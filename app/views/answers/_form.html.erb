<%= form_with model: [@question, @answer], local: true do |form| %>
  <%= render 'shared/error', resource: @answer %>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, id: :answer_text, rows: 5, cols: 54 %>
  </p>
  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <%= form.submit %>
<% end %>
